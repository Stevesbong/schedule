                    td &emsp;R&emsp;
                    td &emsp;E&emsp;
                    td &emsp;A&emsp;
                    td &emsp;K&emsp;
                tr.lunch
                    td &emsp;&emsp;&emsp;
                    td &emsp;&emsp;&emsp;
                    td &emsp;&emsp;&emsp;
                    td &emsp;&emsp;&emsp;
                    td &emsp;&emsp;&emsp;
                    td &emsp;&emsp;&emsp;
                    td &emsp;&emsp;&emsp;
                    td &emsp;&emsp;&emsp;
                tr
                    td 4:40 pm
                    each name, index in data.dinner.first
                        td
                            input(name=`dFirst${index}`, type="text", id="first", class="server-input", placeholder="Server Name", value=name)
                tr
                    td 5:00 pm
                    each name, index in data.dinner.second
                        td
                            input(name=`dSecond${index}`, type="text", id="second", class="server-input", placeholder="Server Name", value=name)
                tr
                    td 5:15 pm
                    each name, index in data.dinner.third
                        td
                            input(name=`dThird${index}`, type="text", id="third", class="server-input", placeholder="Server Name", value=name)
                tr
                    td 5:30 pm
                    each name, index in data.dinner.fourth
                        td
                            input(name=`dFourth${index}`, type="text", id="fourth", class="server-input", placeholder="Server Name", value=name)


        input(type="submit", value="Submit", id="submit-admin", class="schedule-submit")

