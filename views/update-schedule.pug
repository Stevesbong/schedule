extends layout.pug

block content
    h1 Edit Schedule
        a.button.cancel-button(href="/" style={'background-color': '#e4757a'}) Exit
    form(action="/schedules/update", class="schedule-form", method="post")
        table
            thead
                tr
                    th &emsp;&emsp;&emsp;
                    th Sun
                    th Mon
                    th Tues
                    th Wed
                    th Thur
                    th Fri
                    th Sat
            tbody
                tr
                    td 11:10 am
                    each name, index in data.lunch.first
                        td
                            input(name=`lFirst${index}`, type="text", id="first", class="server-input", placeholder="Server Name", value=name)
                tr
                    td 12:00 am
                    each name, index in data.lunch.second
                        td
                            input(name=`lSecond${index}`, type="text", id="second", class="server-input", placeholder="Server Name", value=name)
                tr.lunch
                    td &emsp;&emsp;&emsp;
                    td &emsp;&emsp;&emsp;
